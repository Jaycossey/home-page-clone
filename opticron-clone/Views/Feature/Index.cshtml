@model IEnumerable<opticron_clone.Models.FeatureModel>

@{
    ViewData["Title"] = "Index";
}

@* TODO::
        - Import and display data on screen
        - Expand the Seed Data and Feature Model!
 *@

<div class="full items-justify">
    <div id="banner" class="bg-banner grid-y" style="height: 512px; width: 100%"></div>

        @* Featured Section - Needs modularizing *@
        <section class="pg-width cell grid-x grid-margin-x grid-container fluid">
            @* Auto populate cards *@
            @foreach (var item in Model) 
            {
                @* @if (item.Description != null)
                { *@
                    @* Card Container. Responsive design with Foundation CSS classes *@
                    <div class="card cell small-12 medium-6 large-3" 
                        style="border: none; padding: 5px; width: 300px; margin: auto">
                        @* Title of card within Feature Section *@
                        <h2 style="color: grey">@Html.DisplayFor(modelItem => item.Title)</h2>
                        @* Image with dynamic source path *@
                        <img src='@Html.DisplayFor(modelItem => item.ImageSrc)' style="height: 230px;" />
                        @* Description of card section *@
                        <p style="padding: 5px;">@Html.DisplayFor(modelItem => item.Description)</p>
                        @* Button text data *@
                        <button type="button" class="button green">@Html.DisplayFor(modelItem => item.FBtnText)</button>
                    </div>
                @* } *@
            }
        </section>

        @* Offers section *@
        <section class="pg-width grid-y cell bg-beige grid-container fluid">
            @* Title and container *@
            <h2 class="text-center" style="color: grey; margin-bottom: 20px">@ViewData["OSectionTitle"]</h2>
            <div class="grid-x grid-margin-x" style="margin-x: 34px">
                
                @* Auto populate grid *@
                @for (int i = 0; i < 3; i++) {
                    @* Card container *@
                    <div class="card cell small-12 medium-4">
                        @* Image *@
                        <img src="/images/olympusBrand.png">
                        @* Text content *@
                        <div class="card-section text-center">
                            <p>@ViewData["OfferTitle"]</p>
                            <p><strong>@ViewData["OfferDesc"]</strong></p>
                        </div>
                    </div>
                }

            </div>

            <button type="button" class="button green center" >@ViewData["OBtnText"]</button>
        </section>

        @* Catagory section *@
        <section class="pg-width cell grid-container fluid" >
            @* Title and grid container *@
            <h2 class="text-center" style="color: grey; margin: auto;">@ViewData["CatagoryTitle"]</h2>
            
            @* Horizontal grid for the cards at large screen *@
            <div class="grid-x grid-margin-x">

                @for (int i = 0; i < 4; i++) {
                    @* Card Container *@
                    <div class="card cell small-12 medium-6 large-3 text-center" style="max-height: 320px; border: none">
                        @* Content for cards *@
                        <img class="center" style="max-width: 250px" src='@ViewData["CatImage"]'>
                        <p style="color: grey">@ViewData["CatName"]</p>
                    </div>
                }
            </div>

        </section>

</div>
